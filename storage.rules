rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Character Images:
    // - Publicly readable by anyone.
    // - Writable only by authenticated users, with size and content type validation.
    match /character_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
